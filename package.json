{
  "name": "@veriff/js-sdk",
  "version": "1.2.4",
  "description": "JavaScript SDK for Veriff identity verification",
  "main": "lib/veriff.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "webpack --config webpack/webpack.config.js --mode production",
    "dev": "webpack --progress --color --watch --config webpack/webpack.config.js",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint --ext=js,ts src"
  },
  "author": "Ilia Aphtsiauri <ilia@veriff.me> (https://github.com/iaptsiauri)",
  "contributors": [
    "Maksim Kitsigin <maksim.kitsigin@veriff.com> (https://github.com/fixmk)"
  ],
  "keywords": [
    "veriff",
    "sdk",
    "online",
    "identity",
    "verification"
  ],
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__test__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?|ts?)$"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.15.4",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.3.4",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "jasmine-core": "^3.9.0",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "set-value": "^4.1.0",
    "sinon": "^11.1.2",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.2.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-merge": "^5.8.0",
    "yargs": "^17.1.1"
  }
}
